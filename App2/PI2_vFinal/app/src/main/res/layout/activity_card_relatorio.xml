<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_filtro"
    android:padding="16dp"
    tools:context=".CardRelatorio">

    <TextView
        android:id="@+id/data_relatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Data"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tipo_relatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipo de risco:"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tipo_risco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tipo_relatorio"
        android:layout_alignBaseline="@id/tipo_relatorio"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/descricao_relatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipo_relatorio"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Descrição: "
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/descricao_risco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/descricao_relatorio"
        android:layout_alignBaseline="@id/descricao_relatorio"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/latitude_relatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descricao_relatorio"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Latitude:"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/latitude_risco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/latitude_relatorio"
        android:layout_alignBaseline="@id/latitude_relatorio"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/longitude_relatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/latitude_risco"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Longitude:"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/longitude_risco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/longitude_relatorio"
        android:layout_alignBaseline="@id/longitude_relatorio"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        android:textColor="#000000" />

</RelativeLayout>
